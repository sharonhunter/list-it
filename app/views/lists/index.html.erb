<div class="row">
  <div class="col-xs-12 col-sm-12">
    <h3 class="pull-left">Your Lists</h3>
    <%= link_to 'Create A New List', new_list_path, class: 'btn btn-navy relative pull-right' %>
  </div>
</div>

<div class="custom-hr"></div>

<div class="row">

<% @lists.each do |list| %>
  <div class="col-xs-12 col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title card"><%= link_to list.title, list%></h3>
        </div>
        <div class="panel-body">
          <%= list.description %>
          <% if user_signed_in? %>
        <% if current_user.id == list.user_id %>

          <%= link_to '', edit_list_path(list), class: 'glyphicon glyphicon-pencil' %>
          <%= link_to '', list, class: 'glyphicon glyphicon-trash', title: 'Are you sure you want to delete this list?', method: :delete, data: { confirm: 'This action cannot be undone.', commit: 'Delete List' } %>
          <% end %>
        <% end %>

        </div> 
      </div>
   </div>
 <% end %>

</div>

<br>

<%= link_to 'Create A New List', new_list_path, class: 'btn btn-navy up' %>


