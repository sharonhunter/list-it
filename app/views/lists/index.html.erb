<div class="row">
  <div class="col-xs-12 col-sm-12">
    <h3 class="pull-left">Your Lists</h3>
    <%= link_to 'Create A New List', new_list_path, class: 'btn btn-navy relative pull-right hvr-rectangle-out' %>
  </div>
</div>

<div class="custom-hr"></div>

<div class="row">

<% @lists.each do |list| %>
  <div class="col-xs-12 col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title card"><%= link_to list.title, list%></h3>
          <span class="count pull-right"><%= list.list_items.count %></span> 
          <div class="clearfix"></div>
        </div>
        <div class="panel-body">
          <p><%= list.description %></p>

          <% if user_signed_in? %>
        <% if current_user.id == list.user_id %>
          <div class="text-right">
          <%= link_to '', edit_list_path(list), class: 'glyphicon glyphicon-pencil large' %>
          <%= link_to '', list, class: 'glyphicon glyphicon-trash large', title: 'Are you sure you want to delete this list?', method: :delete, data: { confirm: 'This action cannot be undone.', commit: 'Delete List' } %>
          <% end %>
        <% end %>
        </div>

        </div> 
      </div>
   </div>
 <% end %>

</div>

<br>

<%= link_to 'Create A New List', new_list_path, class: 'btn btn-navy up hvr-rectangle-out' %>


